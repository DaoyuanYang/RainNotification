<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity" android:visibility="visible">

    <Button
            android:layout_width="95dp"
            android:layout_height="43dp"
            android:id="@+id/buttonSearch"
            tools:layout_editor_absoluteY="69dp" tools:layout_editor_absoluteX="28dp"
            tools:text="Search" android:text="Search"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Search here"
            android:ems="10"
            tools:layout_editor_absoluteX="36dp" android:id="@+id/editText" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonSearch"/>
    <Button
            android:text="Send Notification"
            android:layout_width="214dp"
            android:layout_height="54dp"
            android:id="@+id/sendNotificationButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/editText"/>
    <TextView
            android:text="TextView"
            android:layout_width="376dp"
            android:layout_height="310dp"
            android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/sendNotificationButton" android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"/>
    <Button
            android:text="Refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/refreshButton" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>