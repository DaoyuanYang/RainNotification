<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity" android:visibility="visible">

    <TextView
            android:text="Showing possibility for rain"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:id="@+id/titleMessage"
            android:contentDescription="Showing Forcast for rain possibility"
            tools:text="titleMSG" android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/titleMessage"
            app:layout_constraintStart_toStartOf="@+id/titleMessage" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="156dp"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/RainInfo"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            tools:layout_editor_absoluteY="328dp" tools:layout_editor_absoluteX="36dp" android:id="@+id/editText2"/>

</androidx.constraintlayout.widget.ConstraintLayout>